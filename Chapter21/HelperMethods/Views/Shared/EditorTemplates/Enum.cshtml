@model Enum

@Html.DropDownListFor(m => m, Enum.GetValues(Model.GetType()).Cast<Enum>().Select(a => {
    string enumVal = Enum.GetName(Model.GetType(), a);
    return new SelectListItem()
    {
        Selected = (Model.ToString() == enumVal),
        Text = enumVal,
        Value = enumVal
    };
}))
